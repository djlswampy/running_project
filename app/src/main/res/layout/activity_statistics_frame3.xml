<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatisticsFrament.statistics_frame1">

    <Button
        android:id="@+id/btn_week"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="#498DF3"
        android:text="주간"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toStartOf="@+id/btn_month"
        app:layout_constraintStart_toStartOf="@+id/linearLayout3" />

    <Button
        android:id="@+id/btn_month"
        android:layout_width="94dp"
        android:layout_height="48dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="#498DF3"
        android:text="월간"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toStartOf="@+id/btn_year"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btn_week" />

    <Button
        android:id="@+id/btn_year"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="#498DF3"
        android:text="연간"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout3"
        app:layout_constraintStart_toEndOf="@+id/btn_month" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="#F4F1F1"
                android:gravity="center" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="#F4F1F1"
                android:gravity="center"
                android:text="올해" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:layout_weight="1"
                android:background="#F4F1F1"
                android:gravity="center"
                android:text="작년" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/textView35"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="#F4F1F1"
                android:gravity="center"
                android:text="거리" />

            <TextView
                android:id="@+id/tv_this_distance"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2sp"
                android:layout_weight="1"
                android:background="#BEBFBF"
                android:gravity="center"
                android:text="-"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_last_distance"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:background="#BEBFBF"
                android:gravity="center"
                android:text="-"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView43"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="#F4F1F1"
                android:gravity="center"
                android:text="운동 시간" />

            <TextView
                android:id="@+id/tv_this_time"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2sp"
                android:layout_weight="1"
                android:background="#BEBFBF"
                android:gravity="center"
                android:text="-"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_last_time"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:background="#BEBFBF"
                android:gravity="center"
                android:text="-"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView50"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="#F4F1F1"
                android:gravity="center"
                android:text="평균 페이스" />

            <TextView
                android:id="@+id/tv_this_pace"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2sp"
                android:layout_weight="1"
                android:background="#BEBFBF"
                android:gravity="center"
                android:text="-"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_last_pace"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:background="#BEBFBF"
                android:gravity="center"
                android:text="-"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>